@page

@model RegisterModelWorker

@{
    ViewData["Title"] = "Register worker account";
}

<h1 style="text-align:center" class="mt-50 mb-50">@ViewData["Title"]</h1>

<div class="row mb-100">
    <div class="col-md-4 ml-100">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <select asp-for="Input.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.WorkExperience"></label>
                <textarea asp-for="Input.WorkExperience" class="form-control"></textarea>
                <span asp-validation-for="Input.WorkExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Education"></label>
                <textarea asp-for="Input.Education" class="form-control"></textarea>
                <span asp-validation-for="Input.Education" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CV"></label>
                <input asp-for="Input.CV" class="form-control" />
                <span asp-validation-for="Input.CV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LinkedIn"></label>
                <input asp-for="Input.LinkedIn" class="form-control" />
                <span asp-validation-for="Input.LinkedIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Github"></label>
                <input asp-for="Input.Github" class="form-control" />
                <span asp-validation-for="Input.Github" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
